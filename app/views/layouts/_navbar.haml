          -if user_signed_in?
            %a{href: user_path(current_user)}
              =I18n.t 'navbar.my_account'
          -else
            %a{href: new_user_session_path}
              =I18n.t 'navbar.my_account'
        %li
          %a{href: apidocs_path}
            =I18n.t 'navbar.apidoc'
