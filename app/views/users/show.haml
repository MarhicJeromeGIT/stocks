.well
  %p
    Hello 
    = @user.email
  %p
    = link_to 'Log out', destroy_user_session_path, {method: 'DELETE', class:'btn btn-default'}
 
.well
  %h2= "List of your alerts (#{I18n.t 'alerts.count', count: @alerts.count})"
  %table#alert_table.table.table-striped.table-bordered.datatable.no-footer
    %thead
      %tr
        %td Stock name
        %td Target value
        %td Alert status
    %tbody
      -@alerts.each do |a|
        %tr
          %td= a.stock.name
          %td
            = a.display_target_value
          %td= a.status
